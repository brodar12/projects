<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list numbers"
        android:id="@+id/meniu_list"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:width="110dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="settings"
        android:id="@+id/meniu_seting"
        android:layout_below="@+id/meniu_list"
        android:layout_centerHorizontal="true"
        android:width="110dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="statistics"
        android:id="@+id/meniu_statistic"
        android:layout_below="@+id/meniu_seting"
        android:layout_centerHorizontal="true"
        android:width="110dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/meniu_start"
        android:layout_below="@+id/meniu_statistic"
        android:layout_centerHorizontal="true"
        android:width="110dp" />

</RelativeLayout>
